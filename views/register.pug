extends layout

block content
  h1 Register
  if error
    p.error= error
  form(method='POST', action='/register')
    label(for='username') Username:
    input(type='text', name='username', required)
    br
    label(for='password') Password:
    input(type='password', name='password', required)
    br
    button(type='submit') Register
  p
    a(href='/') Login
